<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!-- Cricket       -->

        <include layout="@layout/appbar" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_marginVertical="15dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cricket_bg"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>


            <Button
                android:id="@+id/nav_cricket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="@string/hm_explore"/>
        </com.google.android.material.card.MaterialCardView>
<!--        Soccer-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_marginVertical="15dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/soccer_bg"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

                <Button
                    android:id="@+id/nav_soccer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:text="@string/hm_explore"/>
        </com.google.android.material.card.MaterialCardView>
<!--        Hockey-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_marginVertical="15dp"
            app:cardElevation="100dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/hockey_bg"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>


            <Button
                android:id="@+id/nav_hockey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="@string/hm_explore"/>
        </com.google.android.material.card.MaterialCardView>
<!--        Throwball-->
        <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginVertical="15dp"
        app:cardCornerRadius="10px"
>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/throwball_bg"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>


        <Button
            android:id="@+id/nav_throwball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="Explore"/>
        </com.google.android.material.card.MaterialCardView>
<!--        Badminton-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_marginVertical="15dp"
            app:cardCornerRadius="10px">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/badminton_bg"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>


            <Button
                android:id="@+id/nav_badminton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="Explore"/>
        </com.google.android.material.card.MaterialCardView>
<!--        VolleyBall-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_marginVertical="15dp"
            app:cardCornerRadius="10px"
            android:background="@drawable/cricket_bg">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/volleyball_bg"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>


            <Button
                android:id="@+id/nav_volleyball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="Explore"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>



</androidx.core.widget.NestedScrollView>