        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="NavButton" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/Blue</item>
    </style>
    
    <style name="menuitemcolor" parent="android:TextAppearance.Widget.IconMenu.Item">
